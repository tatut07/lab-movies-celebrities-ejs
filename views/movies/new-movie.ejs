<h2>Add a new Movie</h2>
<form method="POST" action="/movies/create">
    <input type="text" placeholder="title" name="title">
    <input type="text" placeholder="genre" name="genre">
    <input type="text" placeholder="plot" name="plot">
    <input type="text" placeholder="catchPhrase" name="catchPhrase">
    <label for="celebrities">Choose a celebrity</label>
    <select name="cast" id="cast" multiple>
        <% allCelebrities.forEach(celebrity=> { %>
            <option value="<%= celebrity._id %>">
                <%= celebrity.name %>
            </option>
            <% }) %>
    </select>
    <button type="submit">Create</button>
</form>